@model SingleLegMLM.Models.PartyMaster
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add Incomes | Register Page</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="~/assets/css/google/app.min.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show">
        <span class="spinner"></span>
    </div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-with-news-feed">
            <!-- begin news-feed -->
            <div class="news-feed">
                <div class="news-image" style="background-image: url(/assets/img/login-bg/login-bg-11.jpg)"></div>
                <div class="news-caption">
                    <h4 class="caption-title"><b>Add</b> Incomes</h4>
                    <p>
                        Single Leg
                    </p>


                </div>
            </div>
            <!-- end news-feed -->
            <!-- begin right-content -->
            <div class="right-content">
                <!-- begin login-header -->
                <div class="login-header">
                    <div class="brand">
                        <span class="logo">
                            <span class="text-blue">A</span>
                            <span class="text-red">D</span>
                            <span class="text-orange">D</span>
                            <span class="text-blue">I</span>
                            <span class="text-green">N</span>
                            <span class="text-red">C</span>
                            <span class="text-blue">O</span>
                            <span class="text-red">M</span>
                            <span class="text-orange">E</span>
                            <span class="text-blue">S</span>
                        </span> <b>Add</b> Incomes
                        <small>Member Registration</small>
                        <small class="@ViewBag.DisplayClass">
                            @ViewBag._DisplayMsg
                        </small>

                    </div>
                    <div class="icon">
                        <i class="fa fa-sign-in-alt"></i>
                    </div>
                </div>
                <!-- end login-header -->
                <!-- begin login-content -->
                <div class="login-content">
                    <form action="/Account/Register/" method="post" class="margin-bottom-0">
                        <div class="form-group m-b-15">
                            <input type="text" name="SponsorId" class="form-control form-control-lg" value="@Model.SponsorId" placeholder="Sponsor ID" required />
                        </div>
                        <div class="form-group m-b-15">
                            <input type="text" name="SponsorName" class="form-control form-control-lg" value="@Model.SponsorName" placeholder="Sponsor Name" required />
                        </div>
                        <div class="form-group m-b-15">
                            <input type="text" name="MemberName" class="form-control form-control-lg" value="@Model.MemberName" placeholder="Member Name" required />
                        </div>
                        <div class="form-group m-b-15">
                            <select id="Sex" name="Sex" class="form-control form-control-lg">
                                @if (Model.Sex == "Male")
                                {
                                    <option selected="selected" value="Male">Male</option>
                                    <option value="Female">Female</option>
                                }
                                else
                                {
                                    <option selected="selected" value="Male">Male</option>
                                    <option value="Female">Female</option>
                                }
                            </select>
                        </div>
                        @*<div class="form-group m-b-15">
                            <input type="text" name="PanNo" class="form-control form-control-lg" value="@Model.PanNo" placeholder="Pan No." required />
                        </div>*@
                        <div class="form-group m-b-15">
                            <input type="text" name="Mobile" class="form-control form-control-lg" value="@Model.Mobile" placeholder="10 digit Mobile No." min="10", max="10" required />
                        </div>
                        <div class="form-group m-b-15">
                            <input type="text" name="Email" class="form-control form-control-lg" value="@Model.Email" placeholder="Email Address" required />
                        </div>
                        <div class="form-group m-b-15">
                            <input type="password" name="Password" class="form-control form-control-lg" placeholder="Password" required />
                        </div>
                        <div class="form-group m-b-15">
                            <input type="password" name="confirmpassword" class="form-control form-control-lg" placeholder="Confirm Password" required />
                        </div>

                        <div class="login-buttons">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Register</button>
                        </div>
                        <div class="m-t-20 m-b-40 p-b-40 text-inverse">
                            Click <a href="/Account/Index">here</a> to login.
                        </div>
                        <hr />
                        <p class="text-center text-grey-darker mb-0">
                            &copy; Add Incomes All Right Reserved @DateTime.Now.Year
                        </p>
                    </form>
                </div>
                <!-- end login-content -->
            </div>
            <!-- end right-container -->
        </div>
        <!-- end login -->
        <!-- begin scroll to top btn -->
        <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
        <!-- end scroll to top btn -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/js/theme/google.min.js"></script>
    <!-- ================== END BASE JS ================== -->
</body>
</html>