@model SingleLegMLM.Models.PartyMaster

<div class="row">
    <!-- begin col-6 -->
    <div class="col-xl-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-validation-1">
            <!-- begin panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">Add Member</h4>
                <div class="panel-heading-btn">

                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>

                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>

                </div>
            </div>
            <!-- end panel-heading -->
            <!-- begin panel-body -->
            <div class="panel-body">

                <form action="/PartyMaster/Register/" method="post" class="margin-bottom-0">
                    <div class="form-horizontal">
                        <p class="text-red">@ViewBag._DisplayMsg</p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group m-b-15">
                                    <input type="text" name="SponsorId" class="form-control form-control-lg" value="@Model.SponsorId" placeholder="Sponsor ID" required />
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="text" name="SponsorName" class="form-control form-control-lg" value="@Model.SponsorName" placeholder="Sponsor Name" required />
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="text" name="MemberName" class="form-control form-control-lg" value="@Model.MemberName" placeholder="Member Name" required />
                                </div>
                                <div class="form-group m-b-15">
                                    <select id="Sex" name="Sex" class="form-control form-control-lg">
                                        @if (Model.Sex == "Male")
                                        {
                                            <option selected="selected" value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        }
                                        else
                                        {
                                            <option selected="selected" value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="text" name="PanNo" class="form-control form-control-lg" value="@Model.PanNo" placeholder="Pan No." required />
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="form-group m-b-15">
                                    <input type="text" name="Mobile" class="form-control form-control-lg" value="@Model.Mobile" placeholder="Mobile No." required />
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="text" name="Email" class="form-control form-control-lg" value="@Model.Email" placeholder="Email Address" required />
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="password" name="Password" class="form-control form-control-lg" placeholder="Password" required />
                                </div>
                                <div class="form-group m-b-15">
                                    <input type="password" name="confirmpassword" class="form-control form-control-lg" placeholder="Confirm Password" required />
                                </div>

                                <div class="login-buttons">
                                    <button type="submit" class="btn btn-primary btn-block btn-lg">Register</button>
                                </div>
                            </div>
                        </div>
                        </div>
                </form>

                </div>
            </div>
        </div>
    </div>

