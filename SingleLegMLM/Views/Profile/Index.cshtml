@model SingleLegMLM.Models.PartyMaster
@{
    ViewBag.Title = "ProfilePhoto";

}

<div class="row">
    <!-- begin col-6 -->
    <div class="col-xl-6">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-validation-1">
            <!-- begin panel-heading -->
            <div class="panel-heading">
                <h4 class="panel-title">Profile Photo</h4>
                <div class="panel-heading-btn">
                    
                </div>
            </div>
            <!-- end panel-heading -->
            <!-- begin panel-body -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
                {
                    <div class="form-group">

                        <div class="col-md-10">
                            <img class="img-circle img-responsive" src="/Uploads/Slider/@ViewBag._Pic" />
                            <input type="file" name="UploadFile" id="UploadFile" />
                            <div class="help-block">
                                Upload JPEG, PNG Files only
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


